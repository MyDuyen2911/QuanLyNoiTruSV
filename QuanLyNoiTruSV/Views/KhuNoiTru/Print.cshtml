@model IEnumerable<QuanLyNoiTruSV.Models.KhuNoiTru>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>In danh sách khu nội trú</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            padding: 20px;
        }

        h2 {
            color: #b30000;
            text-align: center;
        }

        table {
            margin-top: 20px;
        }

        th {
            background-color: #ffc107 !important;
        }
    </style>
</head>
<body onload="window.print()">

    <h2>DANH SÁCH KHU NỘI TRÚ</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên khu</th>
                <th>Địa chỉ</th>
                <th>Mô tả</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.TenKhu</td>
                    <td>@item.DiaChi</td>
                    <td>@item.MoTa</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>